<Window x:Class="UserAuth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserAuth"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">

    <TabControl >

        <TabItem Header="Настройка" Height="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <ListBox Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Users}" DisplayMemberPath="Name" SelectedItem="{Binding CurrentUser}"/>

                <Grid Grid.Column="1" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" VerticalAlignment="Center" Margin="5" Height="25" Text="{Binding CurrentUser.Name}"/>
                    <Button Grid.Row="1" VerticalAlignment="Center" Margin="5" Height="25" Content="Создать пароль"/>

                    <local:InputUserControl Grid.Row="2"></local:InputUserControl>







                </Grid>

                <Button Content="Добавить пароль" Command="{Binding AddNewCommand}" Grid.Row="1" Grid.Column="0" Margin="2"/>
                

            </Grid>
        </TabItem>

        <TabItem Header="Проверка" >
            <Grid>
                <local:InputUserControl VerticalAlignment="Center" Margin="10"></local:InputUserControl>

            </Grid>
        </TabItem>

    </TabControl>


</Window>
    
    